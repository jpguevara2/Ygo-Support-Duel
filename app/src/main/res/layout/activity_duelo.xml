<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Duelo">

    <Button
        android:id="@+id/btnEditarLP1"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:text="@string/btnEditarLP1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintVertical_bias="0.178" />

    <Button
        android:id="@+id/btnEditarLP2"
        android:layout_width="151dp"
        android:layout_height="55dp"
        android:text="@string/btnEditarLP2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/btnDiv2"
        android:layout_width="72dp"
        android:layout_height="49dp"
        android:backgroundTint="#4CAF50"
        android:text="/2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintVertical_bias="0.394" />

    <EditText
        android:id="@+id/txtDado"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:clickable="true"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="1"
        android:text=""
        android:textIsSelectable="false"
        app:layout_constraintVertical_bias="0.64"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtMoneda"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:clickable="true"
        android:focusable="false"
        android:inputType="text"
        android:text="@string/coin_result_default"
        android:textIsSelectable="false"
        app:layout_constraintVertical_bias="0.832"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnVolver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_revert"
        app:layout_constraintVertical_bias="0.997"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtJugador1"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:hint="@string/txtJugador1"
        android:inputType="text"
        android:maxLength="10"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtJugador2"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:hint="@string/txtJugador2"
        android:inputType="text"
        android:maxLength="10"
        app:layout_constraintVertical_bias="0.323"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Los RadioButtons pueden mantenerse como estÃ¡n si no muestran texto -->
    <RadioButton
        android:id="@+id/rbtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <RadioButton
        android:id="@+id/rbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.206"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />

    <RadioButton
        android:id="@+id/rbtn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <RadioButton
        android:id="@+id/rbtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />
    <EditText
        android:id="@+id/txtLP1"
        android:layout_width="152dp"
        android:layout_height="99dp"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="5"
        android:text="8000"
        android:textSize="50sp"
        app:layout_constraintVertical_bias="0.022"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtLP2"
        android:layout_width="152dp"
        android:layout_height="99dp"
        android:focusable="false"
        android:inputType="number"
        android:maxLength="5"
        android:text="8000"
        android:textSize="50sp"
        app:layout_constraintVertical_bias="0.349"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnReiniciar"
        app:layout_constraintVertical_bias="0.998"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnReiniciar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnReiniciar2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.747"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="72dp"
        android:layout_height="49dp"
        android:backgroundTint="#4CAF50"
        android:text="/2"
        app:layout_constraintVertical_bias="0.095"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnMoneda"
        android:layout_width="120dp"
        android:layout_height="98dp"
        android:background="@null"
        app:srcCompat="@drawable/coin2"
        app:layout_constraintVertical_bias="0.831"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnDado"
        android:layout_width="123dp"
        android:layout_height="88dp"
        android:background="@null"
        app:srcCompat="@drawable/skull2"
        app:layout_constraintVertical_bias="0.639"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
